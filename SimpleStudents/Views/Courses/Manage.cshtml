@model List<SimpleStudents.Web.Models.Courses.CourseModel>

@{
    ViewBag.Title = "Courses management";
}

<h2>Manage</h2>

<div class="body-content">
    <table class="table">
        <thead>
            <tr>
                <th>Course name</th>
                <th>Teachers</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var courseModel in Model)
            {
                <tr>
                    <td>@(courseModel.Name)</td>
                    <td>
                        @foreach (var teacher in courseModel.Teachers)
                        {
                            <p>@(teacher.FirstName) @(teacher.LastName)</p>
                        }
                    </td>
                </tr>
            }
    </table>
</div>

<form method="post" action="">
    <input type="button" value="Add new course" />
</form>